

.BR
  height 6rem

.wrap
  max-width: 1232px;
  margin: 0 auto;
  padding: 0 1em;


.Intro
  margin 4rem 0 5rem


.Feature_button
  cursor pointer
  box-sizing border-box
  background $clr_interstellar
  color #FFF
  font-weight bold
  border-radius: 1em
  padding 50px 1.4em 1em
  
  width 276px
  // height 138px
  position relative

  transition: filter .4s
  filter: drop-shadow(2px 4px 10px #222);
  &:hover
    // filter: none
    filter: drop-shadow(0 0 16px blue);
  &:before
    content: ''
    position absolute
    top -32px
    width 120px
    height 64px
  &:nth-of-type(1):before
    background: url('~static/img/Lamp.png') no-repeat center;
  &:nth-of-type(2):before
    background: url('~static/img/Vote.png') no-repeat center;
  &:nth-of-type(3):before
    background: url('~static/img/Map.png') no-repeat center;

