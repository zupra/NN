mask()
  &:after
    content: ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background: linear-gradient(to top, rgba(0, 21, 72, .9) 0%, rgba(0, 25, 72, 0) 50%);
    border-radius: 16px;


