




.list-enter-active, 
.list-leave-active
  transition: all 1s;

.list-enter, 
.list-leave-to /* .list-leave-active до версии 2.1.8 */ 
  opacity: 0;
  transform: translateY(30px);




.gridCards
  margin-bottom 4rem
  display: grid;
  grid-gap: 3rem;
  grid-template-columns: repeat(3, 380px);

  .cardFigure:hover
  .newsItem:hover .newsItemImg
    // filter: drop-shadow(0 0 2px $clr_alien);
    filter: drop-shadow(0 4px 10px #444);
    box-shadow: 0 4px 8px -4px $clr_alien
    transform: translateY(-4px);

  




.newsItem
  text-decoration none
  height 354px
  &:hover .newsItemImg
    //filter: grayscale(100%);
    filter: none
  &Img
    filter: sepia(90%)
    // filter: grayscale(50%);
    transition: all .3s
    border-radius 16px
  &Text
    margin-top 1em
    display: grid;
    grid-template-rows: 4.6em 1fr;
    &__text
      font-weight bold
      height 4em
      overflow: hidden
    &__date
      opacity: 0.48;




