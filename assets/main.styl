/**
Typography
*/
h1,h2,h3
  line-height 1
  margin-bottom .7em
h1
  font-size: 56px;
h2 
  font-size: 40px;
h3 
  font-size 24px

a
  color inherit


.page-enter-active,
.page-leave-active
    transition-property opacity
    transition-timing-function ease-in-out
    transition-duration .3s

.page-enter,
.page-leave-to
    opacity 0